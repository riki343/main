{% extends '@MainMain/layout.html.twig' %}

{% block title %}Login Area{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/main/css/custom.css') }}" type="text/css" rel="stylesheet">
	<link href="{{ asset('bundles/main/css/style.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block index %}
	<div id="bgvid"
		 data-vide-bg="{{ asset('files/default/default-background.mp4') }}" data-vide-options="loop: true, muted: true, position: 0% 0%">
	</div>

	<section class="big-background" id="reg-form">
		<div class="pattern"></div>
		<div class="big-background-container">
			<h1 class="big-background-title">Easy To Invest</h1>
			<div class="divider"></div>
			<br>
			<div class="row">
				<form action="{{ path('main_login_check') }}" method="post" class="col-md-4 col-md-offset-4" style="text-align: center">
					{% if error %}
						<div class="alert alert-warning alert-dismissible fade in" role="alert">
							<button class="close" aria-label="Close" data-dismiss="alert" type="button">
								<span aria-hidden="true">×</span>
							</button>
							{{ error }}
						</div>
					{% endif %}
					<input type="text" class="form-control" name="_username" placeholder="Имя пользователя" />
					<br>
					<input type="password" class="form-control" name="_password" placeholder="Пароль" />

                    <div style="text-align: right">
                        <a href="#" data-toggle="modal" data-target="#myModal" style="color: #fff; text-decoration: none;">
                            Забыли пароль?
                        </a>
                    </div>

                    <br>
					<input type="hidden" name="_target_path" value="/user" />
					<button class="btn btn-success" type="submit">Вход</button>
					<a href="{{ path('main_signup') }}" class="btn btn-primary ">Регистрация</a>
					<br><br><br><br><br><br>
				</form>

				<br><br>
				<div class="col-md-12">
					<a class="about-section-btn" style="color: #ffffff;" id="see-presentation" href="#presentation-view">Посмотреть презентацию</a>
				</div>


			</div>
		</div>
	</section>

    <!-- Modal window -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel" style="color: #495b79 ">
                        Восстановление пароля
                    </h4>
                </div>
                <div class="modal-body">
                    <form method="post" action="{{ path('main_login_forgot_password') }}">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Введите свой Email" name="userEmail" required>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Продолжить" style="margin-top: 10px; margin-bottom: -20px;">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

	<div class="wrapper">
		<section class="about-section">
			<div class="about-section-container">
				<h2 class="about-section-title">Easy to invest</h2>

				<br><img src="{{ asset('bundles/main/images/money.gif') }}" style="height:200px;"><br>
				<p><strong>Это легкодоступный</strong> и простой в использовании <br> высокодохдный финансовый инструмент,<br> механизм которого
					позволяет получать <br>прибыль в кротчайший сроки.
				</p>
				<br><img src="{{ asset('bundles/main/images/graf.gif') }}" style="height:200px;"><br>
				<p><strong>Используя инструмент</strong> вы сможете воплотить <br> свои мечты в реальность, вместе с людьми<br> со всего мира, которых объединяет <br>Единая цель - стать финансово независимыми.
				</p>

				<br><img src="{{ asset('bundles/main/images/cash.gif') }}" style="height:200px;"><br>
				<p>Все, что вам нужно, - это <strong>интернет и желание</strong><br> получить доступ к новым финансовым возможностям.<br> То, что предлагаем мы, еще никто не предлагал .
				</p>
				<div id="presentation-view"></div>

				<br><br>

				<iframe width="560" height="315" src="https://www.youtube.com/embed/t2GqD4O-ZvU" frameborder="0" allowfullscreen></iframe>

				<br><br>
				<a class="about-section-btn" id="reg-now" href="#reg-form">Зарегестрируйтесь сейчас</a>

			</div>

		</section>

		<section class="small-background-section">
			<div class="pattern"></div>
			<div class="small-background-container">
				<h2 class="small-background-title"><span>Мы в соц сетях </span></h2>
				<ul class="socials">
					<li><a href="http://easytoinvest.net/login#" target="_blank"><i class="fa fa-facebook-square fa-3x"></i></a></li>
					<li><a href="http://easytoinvest.net/login#" target="_blank"><i class="fa fa-twitter-square fa-3x"></i></a></li>
					<li><a href="http://easytoinvest.net/login#" target="_blank"><i class="fa fa-google-plus-square fa-3x"></i></a></li>
				</ul>
			</div>
		</section>
	</div>
{% endblock %}

{% block JavaScripts %}
	<script src="{{ asset('bundles/main/js/jQuery/jquery-2.1.3.min.js') }}"></script>
	<script src="{{ asset('bundles/main/js/jQuery/jquery-migrate-1.2.1.min.js') }}"></script>
	<script src="{{ asset('bundles/main/js/jQuery/jquery-ui.min.js') }}"></script>
	<script src="{{ asset('bundles/main/js/jQuery/jquery.vide.min.js') }}"></script>
	<script src="{{ asset('bundles/main/js/jQuery/jquery.smooth-scroll.js') }}"></script>
	<script src="{{ asset('bundles/main/js/Bootstrap/bootstrap.min.js') }}"></script>
	<script>
		$(function () {
			$('#reg-now').bind('click', function (event) {
				event.preventDefault();
				var link = this;
				$.smoothScroll({
					scrollTarget: link.hash,
					easing: 'swing',
					speed: 700,
					preventDefault: true
				});
				return false;
			});

			$('#see-presentation').bind('click', function (event) {
				event.preventDefault();
				var link = this;
				$.smoothScroll({
					scrollTarget: link.hash,
					easing: 'swing',
					speed: 700,
					preventDefault: true
				});
				return false;
			});
		});

	</script>
{% endblock %}

{% block page %}

{% endblock %}
