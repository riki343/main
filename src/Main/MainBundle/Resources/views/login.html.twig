{% extends '@MainMain/layout.html.twig' %}

{% block pageimage %}
{% endblock %}

{% block title %}Easy To Invest{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/main/css/custom.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('bundles/main/css/style.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block index %}
    <img src="http://easytoinvest.net/web/files/default/easytoinvest-default.jpg" class="hidden" />

    <div id="bgvid"
         data-vide-bg="{{ asset('files/default/default-background.mp4') }}" data-vide-options="loop: true, muted: true, position: 0% 0%">
    </div>

    <div class="container-fluid" style="height: 700px; padding: 0">
        <section class="big-background" id="reg-form">
            <div class="pattern"></div>
            <div class="big-background-container">
                <h1 class="big-background-title" style="margin-bottom: 0;">Easy To Invest</h1>
                <h2 class="big-background-title" style="font-size: 30px; margin-top: 0;">Легко инвестировать, легко зарабатывать!</h2>
                <div class="divider"></div>
                <div class="row">
                    <div class="col-xs-12">
                        <form action="{{ path('main_login_check') }}" method="post" class="col-md-4 col-md-offset-4" style="text-align: center">
                            {% if error %}
                                <div class="alert alert-warning alert-dismissible fade in" role="alert">
                                    <button class="close" aria-label="Close" data-dismiss="alert" type="button">
                                        <span aria-hidden="true">×</span>
                                    </button>
                                    {{ error }}
                                </div>
                            {% endif %}
                            <input type="text" class="form-control" name="_username" placeholder="Имя пользователя" />
                            <br>
                            <input type="password" class="form-control" name="_password" placeholder="Пароль" />

                            <div style="text-align: right">
                                <a href="#" data-toggle="modal" data-target="#myModal" style="color: #fff; text-decoration: none;">
                                    Забыли пароль?
                                </a>
                            </div>

                            <input type="hidden" name="_target_path" value="/user" />
                            <button class="btn btn-success" type="submit">Вход</button>
                            <a href="{{ path('main_signup') }}" class="btn btn-primary ">Регистрация</a>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <a class="about-section-btn" style="margin-top: 40px; font-size: 10px; color: #ffffff;" id="see-presentation" href="#presentation-view">Посмотреть презентацию</a>
                        <a class="about-section-btn" style="margin-top: 10px; font-size: 10px; color: #ffffff;" href="{{ path('main_signup') }}">Инвестировать!</a>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Modal window -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel" style="color: #495b79 ">
                        Восстановление пароля
                    </h4>
                </div>
                <div class="modal-body">
                    <form method="post" action="{{ path('main_login_forgot_password') }}">
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Введите свой Email" name="userEmail" required>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Продолжить" style="margin-top: 10px; margin-bottom: -20px;">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="wrapper" id="wrapper">
        <div class="row">
            <div class="col-xs-12">
                <section class="about-section" style="padding-top: 15px;">
                    <div class="about-section-container">
                        <h2 class="about-section-title" style="padding: 0; margin: 20px 0; font-size: 34px;">Как заработать в системе Easy to invest?</h2>
                        <p align="center">Давайте рассмотрим механизм её действия по этапам:</p>
                        <p align="left"></p>
                        <ol style="text-align: left; padding: 0 10%;">
                            <li>Вы регистрируетесь в системе;</li>
                            <li>Вносите символическую сумму для активации учётной записи (21 доллар);</li>
                            <li>Каждый следующий участник автоматически становится вашим рефералом, и часть его средств зачисляется на ваш лицевой счёт.</li>
                        </ol>

                        <p>Люди регистрируются в Easy to Invest каждый день - и это значит, что уже в самое ближайшее время ваши средства вернутся к вам!</p>
                        <p>Чем раньше вы станете участником системы, тем больше пользователей помогут вам. Не откладывайте дело на потом, <a href="{{ path('main_signup') }}">регистрируйтесь</a> уже сегодня!</p>

                        <h2 class="about-section-title"  style="padding: 0; margin: 20px 0; font-size: 34px;">Преимущества Easy to invest</h2>

                        <br><img src="{{ asset('bundles/main/images/money.gif') }}" style="height:200px;"><br>
                        <p><strong>Это легкодоступный</strong> и простой в использовании <br> высокодоходный финансовый инструмент,<br> механизм которого
                            позволяет получать <br>прибыль в кратчайшие сроки.
                        </p>
                        <br><img src="{{ asset('bundles/main/images/graf.gif') }}" style="height:200px;"><br>
                        <p><strong>Используя инструмент</strong> вы сможете воплотить <br> свои мечты в реальность, вместе с людьми<br> со всего мира, которых объединяет <br>Единая цель - стать финансово независимыми.
                        </p>

                        <br><img src="{{ asset('bundles/main/images/cash.gif') }}" style="height:200px;"><br>
                        <p>Все, что вам нужно, - это <strong>интернет и желание</strong><br> получить доступ к новым финансовым возможностям.<br> То, что предлагаем мы, еще никто не предлагал .
                        </p>
                        <div id="presentation-view"></div>

                        <br><br>

                        <h2 class="about-section-title"  style="padding: 0; margin: 20px 0; font-size: 34px;">Презентация Easy to invest</h2>

                        <div class="row">
                            <div class="col-xs-12 col-md-offset-3 col-md-6">
                                <div class="embed-responsive embed-responsive-16by9">
                                    <iframe width="560" height="315" src="https://www.youtube.com/embed/oYOi9yMp5_4" frameborder="0" allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>


                        <br><br><br>

                        <a class="about-section-btn" href="{{ path('main_signup') }}">Зарегестрируйтесь сейчас</a>

                    </div>

                </section>

                <section class="small-background-section" style="padding-bottom: 30px;">
                    <div class="pattern"></div>
                    <div class="small-background-container">
                        <h2 class="small-background-title"><span>Мы в соц сетях </span></h2>
                        <ul class="socials">
                            <li><a href="http://vk.com/easytoinvest" target="_blank"><i class="fa fa-vk fa-3x"></i></a></li>
                            <li><a href="http://twitter.com/justeasyinvest" target="_blank"><i class="fa fa-twitter fa-3x"></i></a></li>
                            <li><a href="https://www.facebook.com/groups/easytoinvest" target="_blank"><i class="fa fa-facebook fa-3x"></i></a></li>
                            <li><a href="https://plus.google.com/u/0/105012414897862941381/about" target="_blank"><i class="fa fa-google-plus fa-3x"></i></a></li>
                            <li><a href="http://easytoinvest.tumblr.com" target="_blank"><i class="fa fa-tumblr fa-3x"></i></a></li>
                            <li><a href="https://www.linkedin.com/in/easytoinvest" target="_blank"><i class="fa fa-linkedin fa-3x"></i></a></li>
                        </ul>
                        <h4 class="small-background-title" style="font-size: 22px; margin-bottom: 5px;">Контакты</h4>
                        <div class="small-background-container" style="color: #f5f5f5">
                            <h5><b>Австрия, 4020 Linz, Bethlehemstraße, 35</b></h5>
                            <h5>mail@easytoinvest.net</h5>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}

