{% block title %}Login Area{% endblock %}

{% block body %}
<div class="row">
	<div class="col-md-12" style="margin-top:90px">
   		<section id="login">
    		<div class="row animated fadeILeftBig">
				<div class="login-holder" style="width: 60%; margin: auto;">
					<h2 class="page-header text-center text-primary" style="font-size: 30px"> Wellcome </h2>
					{% if error %}
						<div>{{ error.messageKey|trans(error.messageData) }}</div>
					{% endif %}

					<form action="{{ path('main_login_check') }}" method="post">
						<label for="username">Username:</label>
						<input type="text" id="username" name="_username" value="{{ last_username }}" />

						<label for="password">Password:</label>
						<input type="password" id="password" name="_password" />

						<input type="hidden" name="_target_path" value="/user" />

						<button type="submit">login</button>
					</form>
    			</div>
  			</div>
		</section>
	</div>
</div>
