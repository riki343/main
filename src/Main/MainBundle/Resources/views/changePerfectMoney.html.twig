{% extends '@MainMain/index.html.twig' %}

{% block title %}
    Смена Perfect money
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form method="post" action="{{ path('main_userpage_change_perfect_money_page_save') }}" style="max-width: 350px; border: 1px solid rgb(221, 221, 221); box-shadow: 4px 4px 1px #eee; border-radius: 3px; padding: 10px 30px 0 10px;" >

                    {% if zm is defined %}

                        {% if zm == 0 %}
                            <div class="alert alert-warning">
                                Perfect money введен некорректно!
                            </div>

                            <div class="form-group">
                                <div style="margin-bottom: 10px; font-size: 1.1em;">Новый Perfect money:</div>
                                <input type="text" name="newPerfectMoney" class="form-control" required>
                            </div>

                            <div style="margin: 40px 0;">
                                <button type="submit" class="btn btn-primary">Сохранить</button>
                            </div>

                        {% elseif zm == 1 %}
                            <div class="alert alert-success">
                                ваш Perfect money изменен!
                            </div>

                        {% endif %}

                    {% else %}
                        <div class="form-group">
                            <div style="margin-bottom: 10px; font-size: 1.1em;">Новый Perfect money:</div>
                            <input type="text" name="newPerfectMoney" class="form-control" required>
                        </div>

                        <div style="margin: 40px 0;">
                            <button type="submit" class="btn btn-primary">Сохранить</button>
                        </div>

                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
